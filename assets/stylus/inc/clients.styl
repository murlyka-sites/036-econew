
.SClient {
	padding 30px 0
	
	@media (min-width $breakpoint-lg) {
		padding 30px 0 50px
	}
	
	@media (min-width $breakpoint-xxl) {
		padding 50px 0 100px
	}

	&-Title {
		margin-bottom 30px 
		
		@media (min-width $breakpoint-lg) {
			margin-bottom 50px 
		}
		
		@media (min-width $breakpoint-xxl) {
			margin-bottom 80px 
		}
	}
	
	&-Slider {
		margin-bottom 10px 
	}
}

.CClient {
	display block
	color #666
	text-align center
	
	
	&:hover {
		color #666
		text-decoration none
	}
	
	&-Logo {
		width 100%
		height auto
	}
	
	&-Header {
		position relative
		margin-bottom 10px 
		
		&::after {
			content ''
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background rgba(0,0,0, 0.04) 
		}
		
		&:hover::after {
			background rgba(0,0,0, 0.1)
		}
	}
	
	&-Title {
		padding 0 5px 
		font-size 10px 
		color #666
		
		@media (min-width $breakpoint-md) {
			font-size 13px 
		}
		
		@media (min-width $breakpoint-lg) {
			font-size 14px 
		}
	}

}
