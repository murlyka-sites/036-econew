.NavSticky {
	margin-top 20px
	
	@media (min-width $breakpoint-md) {
		padding-right 45px
		position absolute
		top 20px
		left 0
		right 0
	}
	 
	&-Info {
		text-align center
		margin-bottom 10px
		font-size 13px 
		
		@media (min-width $breakpoint-md) {
			text-align left
		}
	}
	
	&-Choosen {
		position relative
		margin-bottom 10px
	}
	
	&-List {
		list-style-type none
		z-index 2 
		padding 0
		margin 0
		background #f1f1f1
		padding 0 15px
		@media (min-width $breakpoint-md) {
			display block
			position static
		}
	}
	
	&-Item {
		position relative
		
		&::after {
			position absolute
			bottom 0
			left 0
			right 0 
			content ''
			display block
			border-bottom 1px solid #ddd
			z-index 1 
		}
		
		&:last-child::after {
			display none
		}
	}
	
	&-Link {
		position relative
		z-index 2
		display block
		font-size 10px
		font-weight 600 
		text-decoration none
		padding 20px 15px
		margin 0 -15px
		color: #333333
		text-transform uppercase
		
		@media (min-width $breakpoint-md) {
			font-size 13px 
		}

		&:hover,
		&.active {
			position relative
			color white
			background #3f9ae3
			text-decoration none
			
			@media (min-width $breakpoint-md) {
			
				&::after {
					content ''
					display block
					width 0
					height 0
					border 7px solid transparent
					border-left-color #3f9ae3
					position absolute
					left 100%
					top 50%
					transform translate(0, -50%)
				}
			}
		}
	}
	
	&-Current {
		color white
		width 100%
		padding 20px 15px
		background-color: #3f9ae3;
		border: none
		text-align left
		display flex
		align-items center
		justify-content space-between
		
		&::after {
			content '\f107'
			margin-left 10px 
			fa()
		}
		
		@media (min-width $breakpoint-md) {
			display none
		}
	}
	
	&-Foo {
		display flex
		margin 0 -5px 
		
		@media (min-width $breakpoint-md) {
			display block
		}
	}
	
	&-Cell {
		width 50%
		padding 0 5px 
		
		@media (min-width $breakpoint-md) {
			width 100%
		}
	}
	
	&-Button {
		width 100%
		text-transform uppercase
		
		@media (min-width $breakpoint-md) {
			margin-bottom 15px 
			
			&.active {
				position relative
				
				&::after {
					content ''
					display block
					width 0
					height 0
					border 7px solid transparent
					border-left-color #69bc45
					position absolute
					left 100%
					top 50%
					transform translate(0, -50%)
				}
			}
		}
	}
	
	&-ToCatalog {
		margin-bottom 15px 
	}
}