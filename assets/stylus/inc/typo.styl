
.Text {
	&-Green {
		color $green
	}
	
	&-Green2 {
		color $green-2
	}
	
	&-Dark2 {
		color $dark-2
	}
	
	&-Blue {
		color $blue
	}
	
	&-Gray {
		color $gray
	}
}

.Title {
	
	&-1 {
		margin 0
		font-size 24px 
		font-weight 300 
		line-height 1.2
		
		@media (min-width $breakpoint-md) {
			font-size 40px 
		}
		
		@media (min-width $breakpoint-lg) {
			font-size 48px 
		}
		
		@media (min-width $breakpoint-xl) {
			font-size 54px 
		}
	}
	
	&-2 {
		margin 0
		font-size 26px
		font-weight 300 
		line-height 1.3 
		
		@media (min-width $sm) {
			font-size 30px 
		}
		
		@media (min-width: $sml) {
			font-size 32px
		}
		
		@media (min-width: $mdl) {
			font-size 34px 
		}
		
		@media (min-width: $lg) {
			font-size 36px 
		}
		
		@media (min-width $breakpoint-xxl) {
			font-size 48px 
		}
	}
	
	&-3 {
		margin 0
		font-size 22px 
		font-weight 300 
		line-height 1.4 
		
		@media (min-width $sm) {
			font-size 26px 
		}
		
		@media (min-width: $sml) {
			font-size 28px
		}
		
		@media (min-width: $mdl) {
			font-size 30px 
		}
		
		@media (min-width: $lg) {
			font-size 32px 
		}
	}
	
	&-4 {
		margin 0
		font-size 18px 
		font-weight 600 
		line-height 1.5
		
		@media (min-width $sm) {
			font-size 20px 
		}
	}
	
	&-5 {
		margin 0
	}
}

.P {
	margin 0
	font-size 1em
	line-height 2
}

.Ol, .Ul {
	margin 0
	padding-left 20px 
	
	&-Item {
		margin-bottom 10px 
	}
}

.Ul {
	list-style-type none
	padding-left 10px
	
	&-Item {
		position relative
		
		&::before {
			position absolute
			top 0
			left -10px
			content 'â€¢'
			color: #3f9ae3;
		}
	}
}

.Blockquote {
	position relative
	border: 1px solid #dddddd;
	padding 30px 20px 35px
	margin 0
	font-style italic 
	font-size 14px 
	
	@media (min-width $sm) {
		font-size 16px 
	}
	
	@media (min-width $mdl) {
		font-size 18px
		padding 30px 40px
	}
	
	&::before {
		content: ""
		display block
		width 31px
		height 31px
		position absolute
		left 15px
		top 0
		transform translate(0, -50%)
		background white url(../images/quote.png) center no-repeat
	}
	
	&-Author {
		position absolute
		background white
		bottom 0
		left 35px
		padding 5px
		transform translate(0, 50%)
		font-size 14px 
		font-weight 600 
		font-style normal 
	}
}
